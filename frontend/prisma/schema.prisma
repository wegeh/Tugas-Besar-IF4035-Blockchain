generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COMPANY
  REGULATOR
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  role          Role
  companyName   String?
  walletAddress String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
