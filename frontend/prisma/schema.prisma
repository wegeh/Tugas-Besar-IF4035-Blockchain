generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  COMPANY
  REGULATOR
}

model User {
  id            String   @id @default(uuid())
  walletAddress String   @unique
  role          Role
  companyName   String?
  email         String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
